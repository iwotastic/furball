{
  "manifest_version": 2,
  "name": "Furball",
  "description": "The ultimate Scratch experience.",
  "version": "1.0",
  "content_scripts": [{
    "matches": ["https://scratch.mit.edu/*"],
    "js": ["injected.js"],
    "css": ["injected.css"]
  }],
  "icons": {"128": "icon128x128.png"},
  "permissions": [
    "storage",
    "alarms",
    "notifications"
  ],
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_title": "Furball"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}
